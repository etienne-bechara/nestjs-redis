{
  "name": "@bechara/nestjs-redis",
  "version": "1.0.2",
  "description": "NestJS module wrapper around Redis IO",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-redis"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "start": "nodemon",
    "build": "rimraf ./dist && npm run index && tsc -p tsconfig.build.json && ncp ./source ./dist/source && rimraf ./source/index.ts",
    "index": "rimraf ./source/index.ts && barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "jest --verbose --forceExit --passWithNoTests",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --coverage --watchAll=false --passWithNoTests",
    "update:patch": "ncu -u --dep dev,prod -t minor && npm i && npm audit fix",
    "update:minor": "ncu -u --dep dev,prod -t major && npm i && npm audit fix",
    "update:major": "ncu -u --dep dev,prod -t latest && npm i && npm audit fix --force"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "nodemonConfig": {
    "exec": "node --inspect=9229 -r ts-node/register ./source/test/test.main.ts",
    "ext": "ts",
    "watch": [
      ".env",
      "source"
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "ts$": "ts-jest"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "peerDependencies": {
    "@bechara/nestjs-core": "^1.0.0"
  },
  "dependencies": {
    "ioredis": "4.19.4"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.0.1",
    "@bechara/nestjs-core": "1.5.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@nestjs/common": "7.6.5",
    "@nestjs/core": "7.6.5",
    "@nestjs/platform-express": "7.6.5",
    "@nestjs/testing": "7.6.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.0",
    "@semantic-release/npm": "7.0.10",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.21",
    "barrelsby": "2.2.0",
    "eslint": "7.18.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.7",
    "npm-check-updates": "10.2.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}
